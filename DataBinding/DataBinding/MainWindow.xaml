<Window x:Class="DataBinding.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataBinding"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Slider x:Name="slider" HorizontalAlignment="Center" Height="21" Margin="0,353,0,0" VerticalAlignment="Top" Width="281" Maximum="120" Minimum="36" Value="78"/>
        <TextBlock HorizontalAlignment="Center" Height="188" Text="Aa Bb Cc" TextWrapping="Wrap" VerticalAlignment="Center" Width="482" FontSize="{Binding Value, ElementName=slider}" TextAlignment="Center"/>

    </Grid>
</Window>
